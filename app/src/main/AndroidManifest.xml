<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MnayaFetteteriaMySql">
        <activity
            android:name=".vistas.UsuarioSeleccionado"
            android:exported="false" />
        <activity
            android:name=".vistas.Ofertas"
            android:exported="false" />
        <activity
            android:name=".vistas.ListadoUsuarios"
            android:exported="false" />
        <activity
            android:name=".vistas.ListadoArticulos"
            android:exported="false" />
        <activity
            android:name=".vistas.ArticuloSeleccionado"
            android:exported="false" />
        <activity
            android:name=".vistas.Cuenta"
            android:exported="false" />
        <activity
            android:name=".vistas.NuevoUsuario"
            android:exported="false"
            android:parentActivityName=".vistas.Principal" />
        <activity
            android:name=".vistas.NuevoArticulo"
            android:exported="false"
            android:parentActivityName=".vistas.Principal" />
        <activity
            android:name=".vistas.Principal"
            android:exported="false" />
        <activity
            android:name=".vistas.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>