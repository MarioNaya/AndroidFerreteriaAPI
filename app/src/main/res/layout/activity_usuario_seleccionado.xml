<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".controladores.UsuarioSeleccionado">

    <!-- AppBar con elevación -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarDetalleUsuario"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#F2A516"
            app:title="Detalle del Usuario"
            app:titleTextColor="#FFFFFF"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:navigationIconTint="#FFFFFF"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ScrollView para el contenido -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toTopOf="@id/actionButtonsContainer">

        <LinearLayout
            android:id="@+id/panelDetalleUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Card principal con información -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header con ID -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.6"
                            android:text="@string/id_detalle_articulo"
                            android:textColor="#0D0D0D"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textIdDetalleUsuario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#12345"
                            android:textSize="14sp"
                            android:textColor="#F2A516"
                            android:textStyle="bold"
                            android:layout_marginStart="4dp"/>

                    </LinearLayout>

                    <!-- Título sección datos personales -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="@string/datos_personales"
                        android:textColor="#0D0D0D"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Campo Nombre (editable) -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nombre"
                        app:boxStrokeColor="#F2A516"
                        app:hintTextColor="#F2A516"
                        app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                        app:startIconTint="#F2A516">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/campoNombreDetalleUsuario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text="Juan"
                            android:textColor="#0D0D0D" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo Apellidos (editable) -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="@string/apellidos"
                        app:boxStrokeColor="#F2A516"
                        app:hintTextColor="#F2A516"
                        app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                        app:startIconTint="#F2A516">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/campoApellidosDetalleUsuario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text="Pérez García"
                            android:textColor="#0D0D0D" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo Edad (editable) -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="@string/edad"
                        app:boxStrokeColor="#F2A516"
                        app:hintTextColor="#F2A516"
                        app:startIconDrawable="@android:drawable/ic_menu_today"
                        app:startIconTint="#F2A516">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/campoEdadDetalleUsuario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="35"
                            android:textColor="#0D0D0D" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Divisor -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="20dp"
                        android:background="#F2A516"
                        android:alpha="0.3"/>

                    <!-- Título sección credenciales -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="@string/credenciales"
                        android:textColor="#0D0D0D"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Usuario (solo lectura) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="@string/usuario"
                        android:textColor="#F2A516"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@"
                            android:textColor="#F2A516"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/textUsuarioDetalleUsuario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="juanperez"
                            android:textSize="18sp"
                            android:textColor="#0D0D0D"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <!-- Campo Password (editable) -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password"
                        app:boxStrokeColor="#F2A516"
                        app:endIconMode="password_toggle"
                        app:endIconTint="#F2A516"
                        app:hintTextColor="#F2A516"
                        app:startIconDrawable="@android:drawable/ic_lock_lock"
                        app:startIconTint="#F2A516">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/campoPasswordDetalleUsuario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:text="password123"
                            android:textColor="#0D0D0D" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Divisor -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="20dp"
                        android:background="#F2A516"
                        android:alpha="0.3"/>

                    <!-- Tipo de usuario (solo lectura) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="@string/tipo_usuario"
                        android:textColor="#0D0D0D"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/caja_radius"
                        android:paddingStart="20dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:id="@+id/textTipoDetalleUsuario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADMIN"
                            android:textColor="#F2A516"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textAllCaps="true"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Botones de acción en la parte inferior -->
    <LinearLayout
        android:id="@+id/actionButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:padding="16dp"
        android:baselineAligned="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón Eliminar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteDetalleUsuario"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="@string/eliminar"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:backgroundTint="#D32F2F"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_delete"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:iconTint="#FFFFFF" />

        <!-- Botón Editar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditDetalleUsuario"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="@string/editar"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:backgroundTint="#0D0D0D"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:iconTint="#FFFFFF" />

        <!-- Botón Actualizar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpdateDetalleUsuario"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="@string/guardar"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:backgroundTint="#F2BB16"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_upload"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:iconTint="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>