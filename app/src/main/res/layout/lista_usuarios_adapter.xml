<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    android:backgroundTint="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen de tipo de usuario (20% del ancho) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/imageContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_margin="12dp"
            android:backgroundTint="#FFF9E6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.20"
            app:layout_constraintDimensionRatio="1:1">

            <ImageView
                android:id="@+id/imageTipoUsuario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:scaleType="centerInside"
                android:contentDescription="Tipo de usuario"
                tools:srcCompat="@tools:sample/avatars"/>

        </androidx.cardview.widget.CardView>

        <!-- Indicador de color lateral -->
        <View
            android:id="@+id/colorIndicator"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#F2A516"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/textContainer"
            app:layout_constraintBottom_toBottomOf="@id/textContainer"
            app:layout_constraintStart_toEndOf="@id/imageContainer"/>

        <!-- Contenedor de textos -->
        <LinearLayout
            android:id="@+id/textContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/colorIndicator"
            app:layout_constraintEnd_toStartOf="@id/badgeContainer">

            <!-- Nombre completo del usuario -->
            <TextView
                android:id="@+id/textNombreItemUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Juan Pérez García"
                android:textColor="#0D0D0D"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Username con icono -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@"
                    android:textColor="#F2A516"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textUserUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="juanperez"
                    android:textColor="#0D0D0D"
                    android:textSize="13sp"
                    android:alpha="0.7"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Badge de tipo de usuario (Admin/User) -->
        <LinearLayout
            android:id="@+id/badgeContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Badge visual del tipo -->
            <LinearLayout
                android:id="@+id/badgeTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/caja_radius"
                android:paddingStart="14dp"
                android:paddingTop="8dp"
                android:paddingEnd="14dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/textTipoUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin"
                    android:textColor="#F2A516"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

            </LinearLayout>

            <!-- Etiqueta pequeña debajo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Tipo"
                android:textSize="9sp"
                android:textColor="#0D0D0D"
                android:alpha="0.5"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>