<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".controladores.ArticuloSeleccionado">

    <!-- AppBar con elevación -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarDetalleArticulo"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#F2A516"
            app:title="Detalle del Artículo"
            app:titleTextColor="#FFFFFF"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:navigationIconTint="#FFFFFF"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ScrollView para el contenido -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toTopOf="@id/actionButtonsContainer">

        <LinearLayout
            android:id="@+id/panelDetalleArticulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Card principal con información -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header con ID -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID: "
                            android:textSize="14sp"
                            android:textColor="#0D0D0D"
                            android:textStyle="bold"
                            android:alpha="0.6"/>

                        <TextView
                            android:id="@+id/textIdDetalleArticulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#12345"
                            android:textSize="14sp"
                            android:textColor="#F2A516"
                            android:textStyle="bold"
                            android:layout_marginStart="4dp"/>

                    </LinearLayout>

                    <!-- Nombre del artículo -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre del Artículo"
                        android:textSize="12sp"
                        android:textColor="#F2A516"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp"/>

                    <TextView
                        android:id="@+id/textNombreDetalleArticulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TALADRO PERCUTOR PROFESIONAL"
                        android:textSize="22sp"
                        android:textColor="#0D0D0D"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.02"
                        android:layout_marginBottom="16dp"/>

                    <!-- Chip de categoría -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Categoría"
                        android:textSize="12sp"
                        android:textColor="#F2A516"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/caja_radius"
                        android:paddingStart="16dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/textCategoriaDetalleArticulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Herramientas Eléctricas"
                            android:textColor="#F2A516"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <!-- Descripción -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descripción"
                        android:textSize="12sp"
                        android:textColor="#F2A516"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp"/>

                    <TextView
                        android:id="@+id/textDescripcionDetalleArticulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Taladro profesional con 850W de potencia, función de percusión y velocidad variable. Ideal para trabajos pesados en madera, metal y mampostería."
                        android:textSize="14sp"
                        android:textColor="#0D0D0D"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="20dp"/>

                    <!-- Divisor -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F2A516"
                        android:alpha="0.3"
                        android:layout_marginBottom="20dp"/>

                    <!-- Campos editables en grid -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Información de Inventario"
                        android:textSize="16sp"
                        android:textColor="#0D0D0D"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- Campo Precio -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:hint="Precio (€)"
                            app:boxStrokeColor="#F2A516"
                            app:hintTextColor="#F2A516"
                            app:prefixText="€"
                            app:prefixTextColor="#F2A516"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/campoPrecioDetalleArticulo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:text="89.99"
                                android:textColor="#0D0D0D"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Campo Stock -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:hint="Stock"
                            app:boxStrokeColor="#F2A516"
                            app:hintTextColor="#F2A516"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/campoStockDetalleArticulo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:text="25"
                                android:textColor="#0D0D0D"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <!-- Origen -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Origen"
                        android:textSize="12sp"
                        android:textColor="#F2A516"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/caja_radius"
                        android:paddingStart="16dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp">

                        <TextView
                            android:id="@+id/textOrigenDetalleArticulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="España"
                            android:textColor="#F2A516"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Botones de acción en la parte inferior -->
    <LinearLayout
        android:id="@+id/actionButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:padding="16dp"
        android:baselineAligned="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón Eliminar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteDetalleArticulo"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:text="Eliminar"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:maxLines="1"
            app:backgroundTint="#D32F2F"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_delete"
            app:iconGravity="textStart"
            app:iconTint="#FFFFFF"
            app:iconPadding="4dp"/>

        <!-- Botón Editar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditDetalleArticulo"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:text="Editar"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:maxLines="1"
            app:backgroundTint="#0D0D0D"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconGravity="textStart"
            app:iconTint="#FFFFFF"
            app:iconPadding="4dp"/>

        <!-- Botón Actualizar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpdateDetalleArticulo"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:text="Guardar"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:maxLines="1"
            app:backgroundTint="#F2BB16"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_upload"
            app:iconGravity="textStart"
            app:iconTint="#FFFFFF"
            app:iconPadding="4dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>