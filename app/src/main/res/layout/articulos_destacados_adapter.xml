<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    android:backgroundTint="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Indicador de color lateral -->
        <View
            android:id="@+id/colorIndicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="#F2A516"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/colorIndicator"
            app:layout_constraintEnd_toStartOf="@id/iconChevron">

            <!-- Nombre del artículo -->
            <TextView
                android:id="@+id/nombreArticuloDestacado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TALADRO PERCUTOR"
                android:textColor="#0D0D0D"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:letterSpacing="0.02"/>

            <!-- Chip de categoría -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/caja_radius"
                android:paddingStart="12dp"
                android:paddingTop="4dp"
                android:paddingEnd="12dp"
                android:paddingBottom="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/categoriaArticuloDestacado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Herramientas Eléctricas"
                    android:textColor="#F2A516"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- Descripción -->
            <TextView
                android:id="@+id/descripcionArticulosDestacados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Taladro profesional con 850W de potencia y función de percusión"
                android:textColor="#0D0D0D"
                android:textSize="14sp"
                android:alpha="0.7"
                android:maxLines="2"
                android:ellipsize="end"/>

        </LinearLayout>

        <!-- Icono chevron derecho -->
        <ImageView
            android:id="@+id/iconChevron"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_more"
            android:tint="#F2A516"
            android:alpha="0.6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Ver más"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>