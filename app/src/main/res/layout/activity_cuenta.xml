<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".controladores.Cuenta">

    <!-- AppBar con elevación -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarCuenta"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#F2A516"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:navigationIconTint="#FFFFFF"
            app:title="@string/title_cuenta"
            app:titleTextColor="#FFFFFF" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ScrollView para el contenido -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toTopOf="@id/actionButtonsContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Card de avatar/perfil -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp">

                    <!-- Avatar circular -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="#FFF9E6">

                        <ImageView
                            android:id="@+id/imageAvatarCuenta"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Avatar del usuario"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/pictogramauser" />

                    </androidx.cardview.widget.CardView>

                    <!-- Nombre del usuario -->
                    <TextView
                        android:id="@+id/textNombreCompletoCuenta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Juan Pérez García"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#0D0D0D"/>

                    <!-- Username -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@"
                            android:textColor="#F2A516"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/textUserCuenta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:text="juanperez"
                            android:textSize="14sp"
                            android:textColor="#0D0D0D"
                            android:alpha="0.7"/>

                    </LinearLayout>

                    <!-- Badge de tipo -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/caja_radius"
                        android:paddingStart="16dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="6dp">

                        <TextView
                            android:id="@+id/textTipoCuenta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADMIN"
                            android:textColor="#F2A516"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textAllCaps="true"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card de información personal -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Título sección -->

                    <!-- Campo Nombre (editable) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="@string/info_personal"
                        android:textColor="#0D0D0D"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nombre"
                        app:boxStrokeColor="#F2A516"
                        app:hintTextColor="#F2A516"
                        app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                        app:startIconTint="#F2A516">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/campoNombreCuenta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text="Juan"
                            android:textColor="#0D0D0D" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo Apellidos (editable) -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="@string/apellidos"
                        app:boxStrokeColor="#F2A516"
                        app:hintTextColor="#F2A516"
                        app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                        app:startIconTint="#F2A516">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/campoApellidosCuenta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text="Pérez García"
                            android:textColor="#0D0D0D" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo Edad (editable) -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="@string/edad"
                        app:boxStrokeColor="#F2A516"
                        app:hintTextColor="#F2A516"
                        app:startIconDrawable="@android:drawable/ic_menu_today"
                        app:startIconTint="#F2A516">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/campoEdadCuenta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="35"
                            android:textColor="#0D0D0D" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Divisor -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="20dp"
                        android:background="#F2A516"
                        android:alpha="0.3"/>

                    <!-- Título seguridad -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="@string/seguridad"
                        android:textColor="#0D0D0D"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Campo Password (editable) -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password"
                        app:boxStrokeColor="#F2A516"
                        app:endIconMode="password_toggle"
                        app:endIconTint="#F2A516"
                        app:hintTextColor="#F2A516"
                        app:startIconDrawable="@android:drawable/ic_lock_lock"
                        app:startIconTint="#F2A516">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/campoPasswordCuenta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:text="password123"
                            android:textColor="#0D0D0D" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Nota informativa -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/caja_radius"
                        android:padding="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:alpha="0.7"
                            android:text="@string/info_edit_cuenta"
                            android:textColor="#0D0D0D"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Botones de acción en la parte inferior -->
    <LinearLayout
        android:id="@+id/actionButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:padding="16dp"
        android:baselineAligned="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón Editar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditCuenta"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="@string/btn_editar_perfil"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:backgroundTint="#0D0D0D"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:iconTint="#FFFFFF" />

        <!-- Botón Guardar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpdateCuenta"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="@string/btn_guardar_perfil"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            app:backgroundTint="#F2BB16"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_upload"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:iconTint="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>