<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:backgroundTint="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Banner de OFERTA en la esquina superior derecha -->
        <TextView
            android:id="@+id/badgeOferta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OFERTA"
            android:background="#D32F2F"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:paddingStart="12dp"
            android:paddingTop="4dp"
            android:paddingEnd="12dp"
            android:paddingBottom="4dp"
            android:layout_margin="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Indicador de color lateral izquierdo -->
        <View
            android:id="@+id/colorIndicator"
            android:layout_width="5dp"
            android:layout_height="0dp"
            android:background="#D32F2F"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Contenedor principal -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/colorIndicator"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Nombre del artículo -->
            <TextView
                android:id="@+id/textNombreOfertas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TALADRO PERCUTOR PROFESIONAL"
                android:textColor="#0D0D0D"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:letterSpacing="0.02"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginEnd="60dp"/>

            <!-- Chip de categoría -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/caja_radius"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/textCategoriaOfertas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Herramientas Eléctricas"
                    android:textColor="#F2A516"
                    android:textSize="11sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- Descripción -->
            <TextView
                android:id="@+id/textDescripcionOfertas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Taladro profesional con 850W de potencia y función de percusión"
                android:textColor="#0D0D0D"
                android:textSize="13sp"
                android:alpha="0.7"
                android:maxLines="2"
                android:ellipsize="end"/>

            <!-- Divisor -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#F2A516"
                android:alpha="0.2"/>

            <!-- Contenedor de precio y stock -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Precio con descuento destacado -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precio especial"
                        android:textSize="10sp"
                        android:textColor="#0D0D0D"
                        android:alpha="0.5"/>

                    <TextView
                        android:id="@+id/textPrecioOfertas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="69.99€"
                        android:textColor="#D32F2F"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <!-- Stock disponible -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stock disponible"
                        android:textSize="10sp"
                        android:textColor="#0D0D0D"
                        android:alpha="0.5"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/caja_radius"
                        android:paddingStart="12dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="6dp">

                        <TextView
                            android:id="@+id/textStockOfertas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25 unid."
                            android:textColor="#F2A516"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>